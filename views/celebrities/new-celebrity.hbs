<h2>NEW CELEB</h2>

<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-8">

            <h2>CREATE A CELEB</h2>
            <hr>

            <form action="/celebrities/create" method="POST">
                <div class="mb-3 mt-5">
                    <label for="celebrityName" class="form-label">Name</label>
                    <input type="text" class="form-control" id="celebrityName" name="name">
                </div>

                <div class="mb-3">
                    <label for="celebrityOcupation" class="form-label">Ocupation</label>
                    <input type="text" class="form-control" id="celebrityOcupation" name="occupation">
                </div>

                <div class="mb-3 ">
                    <label for="celebrityPhrase" class="form-label">Catchphrase</label>
                    <input type="text" class="form-control" id="celebrityPhrase" name="catchPhrase">
                </div>

                <button type="submit" class="btn btn-dark">Create Celeb</button>
            </form>

        </div>
    </div>



</div>