<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-8">

            <h2>EDIT {{title}}</h2>
            <hr>

            <form action="/movies/edit-movie/{{id}}" method="POST">
                <div class="mb-3 mt-5">
                    <label for="movieName" class="form-label">Title</label>
                    <input type="text" class="form-control" id="movieName" name="title" value="{{movie.title}}">
                </div>

                <div class="mb-3">
                    <label for="movieGenre" class="form-label">Genre</label>
                    <input type="text" class="form-control" id="movieGenre" name="genre" value="{{movie.genre}}">
                </div>

                <div class="mb-3 ">
                    <label for="moviePlot" class="form-label">Plot</label>
                    <input type="text" class="form-control" id="moviePlot" name="plot" value="{{movie.plot}}">
                </div>

                <div class="mb-3 ">
                    <label for="movieCast" class="form-label">Cast</label>
                    <select class="form-select col-12" multiple name="cast">
                        {{#each celebFromDB}}
                        <option value="{{id}}">{{name}}</option>
                        {{/each}}

                    </select>
                </div>

                <button type="submit" class="btn btn-dark">Edit Movie</button>
            </form>

        </div>
    </div>



</div>